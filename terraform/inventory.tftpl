# terraform/inventory.tftpl
[deploy_nodes]
%{ for ip in slice(ip_addrs, 0, length(ip_addrs) - 1) ~}
${ip} ansible_user=vagrant ansible_ssh_private_key_file=${ssh_key} ansible_ssh_common_args='-o StrictHostKeyChecking=no'
%{ endfor ~}

[test_nodes]
${ip_addrs[length(ip_addrs) - 1]} ansible_user=vagrant ansible_ssh_private_key_file=${ssh_key} ansible_ssh_common_args='-o StrictHostKeyChecking=no'
